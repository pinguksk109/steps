<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- @formatter:off -->
<mapper namespace="com.ot.steps.infrastructure.repository.StepRepository">

	<insert id="saveStep">
	    INSERT INTO
	        steps (person_id, date, steps, memo)
	    VALUES
	        (#{dto.personId}, #{dto.date}, #{dto.steps}, #{dto.memo})
	</insert>


</mapper>